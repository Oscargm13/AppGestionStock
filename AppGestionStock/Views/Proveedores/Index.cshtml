@model List<Proveedor>

@{
    ViewData["Title"] = "Proveedores";
}

<div class="container mt-4">
    <h2>Proveedores</h2>

    <a asp-action="ProveedorCreate" class="btn btn-primary mb-3">Crear Nuevo Proveedor</a>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mb-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Buscar proveedores...">
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nombre Empresa</th>
                <th>Teléfono</th>
                <th>Email</th>
                <th>Nombre Contacto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody id="proveedorTableBody">
            @foreach (var proveedor in Model)
            {
                <tr>
                    <td>@proveedor.NombreEmpresa</td>
                    <td>@proveedor.Telefono</td>
                    <td>@proveedor.Email</td>
                    <td>@proveedor.NombreContacto</td>
                    <td>
                        <a asp-action="ProveedorEdit" asp-route-id="@proveedor.IdProveedor" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="ProveedorDelete" asp-route-id="@proveedor.IdProveedor" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#searchInput').on('keyup', function () {
            var value = $(this).val().toLowerCase();
            $('#proveedorTableBody tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });
    });
</script>